@model IEnumerable<J20240408.EntidadesDeNegocio.PersonaJ>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="Index">
    <div class="row">
        <div class="form-group col-3">
            <label class="control-label">Nombre</label>
            <input type="text" name="nombre" class="form-control" />
        </div>
        <div class="form-group col-3">
            <label class="control-label">Apellido</label>
            <input type="text" name="apellido" class="form-control" />
        </div>
    </div>
  
    <div class="row">
        <div class="form-group col-12">
            <input type="submit" value="Buscar" class="btn btn-primary" />
            <a asp-action="Create" class="btn btn-primary">Crear</a>
        </div>
    </div>
</form>
<p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidoJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechadeNacimientoJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SueldoJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechadeNacimientoJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SueldoJ)
            </td>

                    <td>
                        @if (item.Estatus == 1)
                        {
                            <span>Activo</span>
                        }
                        else
                        {
                            <span>Inactivo</span>
                        }
                    </td>


            
            <td>
                @Html.ActionLink("Editar", "Edit", new {  id=item.Id  }) |
                @Html.ActionLink("Details", "Details", new {  id=item.Id  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
